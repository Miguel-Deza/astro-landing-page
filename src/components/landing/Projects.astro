---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5">Projects</h2>
{
	[
		projects.map((project) => (
			<div class="flex flex-col mb-2 text-center md:text-left d:flex-rowgithubvg">
				<div class="flex-1 p-4 flex flex-col gap-y-3">
					<h2 class="font-bold text-2xl my-4">{project.title}</h2>
					<p class="my-2">{project.description}</p>
                    <button class="bg-teal-500 px-3 py-2 hover:bg-teal-400">
                        More info</button>
				</div>
                <div class="flex-1">
                    <img src={project.image} class="w-72 m-auto" alt=""></div>
			</div>
		)),
	]
}
